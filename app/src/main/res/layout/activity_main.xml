<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/hintergrund">

    <TextView
        android:id="@+id/catsDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cats_display"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/powerDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/power_display"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_margin="8dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="16dp">

        <ImageButton
            android:id="@+id/clickImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cat1"
            android:background="@null"
            android:contentDescription="@string/click_button"
            android:scaleType="centerInside" />

        <ImageButton
            android:id="@+id/leftArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pfeill"
            android:background="@null"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="Previous" />

        <ImageButton
            android:id="@+id/rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pfeilr"
            android:background="@null"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="Next" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/upgrades_label"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_margin="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upgradesRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp" />

</LinearLayout>
